<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog title='{i18n>oData.WorkCenter.WorkCntr}'
		liveChange='handleWorkCenterSearch' search='handleWorkCenterSearch'
		confirm='handleWorkCenterClose' close='handleWorkCenterClose' cancel='handleWorkCenterClose'
		growingThreshold='100'
		items="{
		path : '/WorkCenterSet',
		sorter : {
				path : 'WorkCntr',
				descending : false
			}
		}">
		<columns>
			<Column width="5em">
				<header>
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>oData.WorkCenter.WorkCntr}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>oData.WorkCenter.WorkCtrTxt}" />
				</header>
			</Column>
			<Column>
				<header>
					<Text text="{i18n>oData.WorkCenter.Plant}" />
				</header>
			</Column>
		</columns>
		<ColumnListItem>
			<cells>
				<Switch state="{ path: 'WorkCntr' , formatter: '._isWorkCenterSelected' }"
					enabled="{
						path: 'app>/syncIcon',
						formatter: '.formatter.workcenterChangeEnabled'
					}">
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Switch>
				<Text text="{WorkCntr}" />
				<Text text="{WorkCtrTxt}" />
				<Text text="{Plant}" />
			</cells>
		</ColumnListItem>
	</TableSelectDialog>
</core:FragmentDefinition>
