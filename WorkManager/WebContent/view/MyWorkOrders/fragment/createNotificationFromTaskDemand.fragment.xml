<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">

	<Dialog title="{i18n>workOrderDetails.dialog.notification.create.title}"
		contentWidth="70%" showHeader="true" horizontalScrolling="false" draggable="true"
		class="sapUiPopupWithPadding">

		<content>
			<Text text="{i18n>workOrderDetails.dialog.notification.create.text}" />
		</content>
		<beginButton>
			<Button
				text="{i18n>workOrderDetails.button.notification.create}"
				press="handleCreateNotificationFromTask" />
		</beginButton>
		<endButton>
			<Button
				text="{i18n>common.frag.button.cancel}"
				press="closeDialog" />
		</endButton>
	</Dialog>
	
</core:FragmentDefinition>