<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="{i18n>oData.OrderOperationAssignment.Employeenumber}"
		contentWidth="70%" showHeader="true" horizontalScrolling="false" draggable="true"
		class="sapUiPopupWithPadding">

		<content>
			<Select width="100%"
				items="{path: '/WorkCenterSet', sorters: [{path: 'Plant'}]}"
				selectedKey="{ViewModel>/Planplant}" change="handlePlanplantSelectChange">
				<items>
					<core:Item text="{Plant} - {WorkCtrTxt}" key="{Plant}" />
				</items>
			</Select>
			<SearchField search="handleSearchEmployeenumberByWorkCenter" liveChange="handleSearchEmployeenumberByWorkCenter"
				value="{ViewModel>/SearchEmployeeNumberByWorkCenter}" />
			<Table id="employeeNumberByWorkCenterTable"
				items="{
			      path: '/EmployeeWorkCenterSet',
			      sorter : {
			        path : 'UserFullname',
			        descending : true
	 			  },				    
			      filters:[{
			      	path: 'Plant', 
			      	operator: 'EQ',
			      	value1: 'ZZZZZZZZ' 
			      }]
			    }">
			    
			    <columns>
			    	<Column hAlign="Center" vAlign="Middle">
						<header>
							<ObjectIdentifier title="{i18n>oData.EmployeeWorkCenter.PersonNo}" />
						</header>
					</Column>
					<Column hAlign="Center" vAlign="Middle">
						<header>
							<ObjectIdentifier title="{i18n>oData.EmployeeWorkCenter.UserFullname}" />
						</header>
					</Column>
			    </columns>
				<items>
					<ColumnListItem type="Active" press="handleEmployeeNumberByWorkCenterPress">
						<Text text="{PersonNo}" />
						<Text text="{UserFullname}" />
					</ColumnListItem>
				</items>
				
			</Table>
		</content>

		<endButton>
			<Button
				text="{i18n>common.frag.button.cancel}"
				press="closeDialog" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>